<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Only backup user preferences, exclude sensitive SMS data -->
        <include domain="sharedpref" />
        <exclude domain="database" />
        <exclude domain="external" />
    </cloud-backup>
    <device-transfer>
        <!-- Allow user preferences to be transferred, but not SMS data -->
        <include domain="sharedpref" />
        <exclude domain="database" />
        <exclude domain="external" />
    </device-transfer>
</data-extraction-rules>
