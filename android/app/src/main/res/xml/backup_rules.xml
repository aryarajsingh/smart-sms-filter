<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Backup user preferences but exclude sensitive data -->
    <include domain="sharedpref" path="."/>
    <exclude domain="database" path="."/>
    <exclude domain="external" path="."/>
    <!-- Exclude device-specific and temporary data -->
    <exclude domain="sharedpref" path="device.xml"/>
    <exclude domain="sharedpref" path="temp_data.xml"/>
</full-backup-content>
